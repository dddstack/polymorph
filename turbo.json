{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build:watch": {
      "cache": false,
      "dependsOn": ["^build:watch"]
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["build", "^build"]
    },
    "test:typecheck": {
      "cache": false,
      "dependsOn": ["build", "^build"]
    },
    "test:watch": {
      "cache": false,
      "dependsOn": ["build", "^build"]
    }
  }
}
